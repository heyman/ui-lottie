{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": [
      "es6",
      "dom",
      "es2015.iterable",
      "es2017"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "*": [
        "./node_modules/@nativescript/core/*",
        "./node_modules/*"
      ]
    },
    "moduleResolution": "node",
    "removeComments": false
  },
  "files": [
    "./src/main.ts"
  ],
  "include": [
    "../src",
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "platforms",
    "../src/node_modules",
    "**/*.spec.ts"
  ]
}